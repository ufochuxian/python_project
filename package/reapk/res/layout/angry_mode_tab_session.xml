        <Button android:id="@id/button_session_reset_reads" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Reset reads" android:layout_weight="1.0" style="@android:style/Widget.Holo.Light.Button.Borderless.Small" />
    </LinearLayout>
    <View android:background="#ffdddddd" android:layout_width="fill_parent" android:layout_height="1.0dip" />
    <Button android:id="@id/button_session_reset_and_kill" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Reset all user data\n(App will be 'as new' on next start)" style="@android:style/Widget.Holo.Light.Button.Borderless.Small" />
</LinearLayout>