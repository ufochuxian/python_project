<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <GridLayout android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:columnCount="2" android:useDefaultMargins="true">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="App installed" />
        <TextView android:textStyle="bold" android:layout_gravity="right" android:id="@id/session_app_installed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2014-01-01 00:00" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="User created" />
        <TextView android:textStyle="bold" android:layout_gravity="right" android:id="@id/session_user_created" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2014-01-01 00:00" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Session started" />
        <TextView android:textStyle="bold" android:layout_gravity="right" android:id="@id/session_started" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0 minutes ago" />
