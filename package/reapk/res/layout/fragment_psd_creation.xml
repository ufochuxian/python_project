<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:gravity="center_vertical" android:id="@id/top_bar_container" android:layout_width="fill_parent" android:layout_height="@dimen/top_bar_height" android:layout_alignParentTop="true" />
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/header_container" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/top_bar_container">
        <ImageView android:id="@id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/l_icon_password" />
        <TextView android:textSize="@dimen/content_x_large_size" android:textColor="@color/color_default_dark_gray" android:gravity="center" android:id="@id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="设置密码" />
        <TextView android:textSize="@dimen/content_normal_size_smaller" android:textColor="@color/color_default_gray" android:gravity="center" android:id="@id/sub_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="至少6位" android:layout_centerHorizontal="true" />
    </LinearLayout>
    <com.wrapp.floatlabelededittext.FloatLabeledEditText android:layout_width="fill_parent" android:layout_height="@dimen/default_row_height" android:layout_marginLeft="@dimen/onboarding_side_margin" android:layout_marginTop="@dimen/onboarding_side_margin" android:layout_marginRight="@dimen/onboarding_side_margin" android:layout_below="@id/header_container">
        <EditText android:textSize="@dimen/content_normal_size" android:textColor="@color/color_default_dark_gray" android:textColorHint="@color/color_default_gray" android:id="@id/psd_input" android:background="@drawable/edittext_bg_style" android:paddingLeft="0.0dip" android:layout_width="fill_parent" android:layout_height="@dimen/default_row_height" android:hint="@string/psd_creation_hint" android:singleLine="true" android:maxLength="20" android:inputType="textPassword" android:textCursorDrawable="@null" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    <Button android:textSize="@dimen/content_large_size" android:textColor="@android:color/white" android:id="@id/action_next" android:background="@color/color_green" android:layout_width="fill_parent" android:layout_height="@dimen/large_button_height" android:text="@string/create_account" android:layout_alignParentBottom="true" />
</RelativeLayout>