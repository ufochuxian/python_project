<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/default_green_btn_text_color" />
            <corners android:topLeftRadius="@dimen/button_small_radius" android:topRightRadius="@dimen/button_small_radius" android:bottomLeftRadius="@dimen/button_small_radius" android:bottomRightRadius="@dimen/button_small_radius" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/default_green_btn_text_color" />
            <corners android:topLeftRadius="@dimen/button_small_radius" android:topRightRadius="@dimen/button_small_radius" android:bottomLeftRadius="@dimen/button_small_radius" android:bottomRightRadius="@dimen/button_small_radius" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_disable_gray" />
            <corners android:topLeftRadius="@dimen/button_small_radius" android:topRightRadius="@dimen/button_small_radius" android:bottomLeftRadius="@dimen/button_small_radius" android:bottomRightRadius="@dimen/button_small_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/default_green_btn_text_color" />
            <corners android:topLeftRadius="@dimen/button_small_radius" android:topRightRadius="@dimen/button_small_radius" android:bottomLeftRadius="@dimen/button_small_radius" android:bottomRightRadius="@dimen/button_small_radius" />
        </shape>
    </item>
</selector>