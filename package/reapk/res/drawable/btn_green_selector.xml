<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_pressed="true"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape n1:shape="rectangle">
            <solid n1:color="@color/default_green_btn_text_color" />
        </shape>
    </item>
    <item n2:state_selected="true"
      xmlns:n2="http://schemas.android.com/apk/res/android">
        <shape n2:shape="rectangle">
            <solid n2:color="@color/default_green_btn_text_color" />
        </shape>
    </item>
    <item n3:state_enabled="false"
      xmlns:n3="http://schemas.android.com/apk/res/android">
        <shape n3:shape="rectangle">
            <solid n3:color="@color/color_disable_gray" />
        </shape>
    </item>
    <item>
        <shape n4:shape="rectangle"
          xmlns:n4="http://schemas.android.com/apk/res/android">
            <solid n4:color="@color/default_green_btn_text_color" />
        </shape>
    </item>
